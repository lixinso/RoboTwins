<mujoco model="wheeled_tracking">
  <compiler angle="degree" coordinate="local"/>
  <option timestep="0.01" gravity="0 0 -9.81"/>

  <default>
    <geom friction="1.0 0.1 0.1" density="300" rgba="0.6 0.6 0.6 1"/>
    <joint damping="0.1"/>
  </default>

  <asset>
    <texture name="ground" type="2d" builtin="checker" width="512" height="512" rgb1="0.2 0.2 0.2" rgb2="0.3 0.3 0.3"/>
    <material name="ground_mat" texture="ground" texrepeat="8 8" reflectance="0.1"/>
  </asset>

  <worldbody>
    <geom name="ground" type="plane" pos="0 0 0" size="5 5 0.1" material="ground_mat"/>

    <camera name="front" mode="fixed" pos="0 -2 1" xyaxes="1 0 0 0 1 0"/>

    <body name="base" pos="0 0 0.15">
      <freejoint/>
      <geom name="chassis" type="box" size="0.2 0.12 0.05" rgba="0.2 0.2 0.8 1"/>

      <body name="wheel_left" pos="0 -0.14 0">
        <joint name="left_wheel_joint" type="hinge" axis="0 1 0"/>
        <geom name="wheel_left_geom" type="cylinder" size="0.06 0.02" rgba="0.1 0.1 0.1 1"/>
      </body>

      <body name="wheel_right" pos="0 0.14 0">
        <joint name="right_wheel_joint" type="hinge" axis="0 1 0"/>
        <geom name="wheel_right_geom" type="cylinder" size="0.06 0.02" rgba="0.1 0.1 0.1 1"/>
      </body>
    </body>
  </worldbody>

  <actuator>
    <motor name="left_wheel" joint="left_wheel_joint" ctrlrange="-1 1" gear="5"/>
    <motor name="right_wheel" joint="right_wheel_joint" ctrlrange="-1 1" gear="5"/>
  </actuator>
</mujoco>
